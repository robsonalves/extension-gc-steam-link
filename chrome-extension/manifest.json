{
  "manifest_version": 3,
  "name": "Steam Link Finder",
  "version": "1.0",
  "description": "Captura links steam://connect com IP e senha na GamersClub e envia para o Discord.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://gamersclub.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gamersclub.com.br/*"],
      "js": ["content.js"]
    }
  ]
}